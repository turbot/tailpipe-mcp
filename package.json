{
  "name": "@turbot/tailpipe-mcp",
  "version": "0.1.0",
  "description": "MCP server for interacting with Tailpipe.",
  "license": "Apache-2.0",
  "author": "Turbot, Inc. (https://turbot.com)",
  "homepage": "https://turbot.com",
  "bugs": "https://github.com/turbot/tailpipe-mcp/issues",
  "type": "module",
  "bin": {
    "mcp-server-tailpipe": "dist/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc && shx chmod +x dist/index.js",
    "prepare": "npm run build",
    "watch": "tsc --watch",
    "clean": "rm -rf dist",
    "clean:tests": "node tests/cleanup.js",
    "start": "node dist/index.js",
    "test": "node tests/run-all-tests.js",
    "test:consolidated": "node tests/consolidated-test.js",
    "test:conversation": "node tests/conversation.js",
    "test:duckdb": "node tests/duckdb.js",
    "test:simple": "node tests/simple.js",
    "test:setup": "node tests/manual-setup.js",
    "test:mcp": "node tests/mcp.js",
    "test:list-tables": "node tests/list-tables.js",
    "test:minimal": "node tests/minimal-list-tables.js",
    "test:resources": "node tests/test-resources.js",
    "test:resilience": "node tests/connection-resilience.js",
    "test:resources-resilience": "node tests/resources-resilience.js",
    "test:claude-desktop": "node tests/claude-desktop-error.js",
    "test:tailpipe": "node tests/claude-desktop-tailpipe.js",
    "test:inspect-tools": "node tests/inspect-tools.js",
    "test:status": "node tests/test-status-resource.js",
    "test:reconnect": "node tests/test-reconnect-tool.js"
