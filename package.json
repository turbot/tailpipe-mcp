{
  "name": "@turbot/tailpipe-mcp",
  "version": "0.1.0",
  "description": "MCP server for interacting with Tailpipe.",
  "license": "Apache-2.0",
  "author": "Turbot, Inc. (https://turbot.com)",
  "homepage": "https://turbot.com",
  "bugs": "https://github.com/turbot/tailpipe-mcp/issues",
  "type": "module",
  "bin": {
    "mcp-server-tailpipe": "dist/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc && shx chmod +x dist/index.js",
    "prepare": "npm run build",
    "watch": "tsc --watch",
    "clean": "rm -rf dist",
    "clean:tests": "node tests/cleanup.js",
    "start": "node dist/index.js",
    "test": "NODE_OPTIONS='--experimental-vm-modules --no-warnings=ExperimentalWarning' jest",
    "test:watch": "NODE_OPTIONS='--experimental-vm-modules --no-warnings=ExperimentalWarning' jest --watch",
    "test:coverage": "NODE_OPTIONS='--experimental-vm-modules --no-warnings=ExperimentalWarning' jest --coverage",
    "test:db": "NODE_OPTIONS='--experimental-vm-modules --no-warnings=ExperimentalWarning' jest -t 'DuckDB'",
    "test:tools": "NODE_OPTIONS='--experimental-vm-modules --no-warnings=ExperimentalWarning' jest -t 'Tools'",
    "test:resources": "NODE_OPTIONS='--experimental-vm-modules --no-warnings=ExperimentalWarning' jest -t 'Resources'",
    "test:server": "NODE_OPTIONS='--experimental-vm-modules --no-warnings=ExperimentalWarning' jest -t 'MCP Server'",
    "test:legacy": "node tests/run-all-tests.js",
    "test:legacy:duckdb": "node tests/duckdb.js",
    "test:legacy:consolidated": "node tests/consolidated-test.js",
    "test:legacy:simple": "node tests/simple.js"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.6.1",
    "@types/node": "^20.11.5",
    "duckdb": "^1.2.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "jest": "^29.7.0",
    "shx": "^0.3.4",
    "ts-jest": "^29.2.6",
    "typescript": "^5.6.2"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": ["**/tests/**/*.test.ts"],
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "transform": {
      "^.+\\.tsx?$": ["ts-jest", {
        "useESM": true,
        "tsconfig": "tsconfig.test.json"
      }]
    },
    "globalTeardown": "./jest/teardown.js",
    "extensionsToTreatAsEsm": [".ts"],
    "testTimeout": 10000,
    "forceExit": true
  }
}
